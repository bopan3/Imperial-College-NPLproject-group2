-module(hanoi).
-export([hanoi/1]).
hanoi(N) when N>0 ->

do_hanoi({0, _, _}) ->
do_hanoi({1, From, To}) ->
do_hanoi({N, From, To}) ->

by(From, To) ->
以 Haskell 语言实现:

hanoi :: Integer -> String -> String -> String -> [(String, String)]
hanoi 0 _ _ _ = []
hanoi 1 from _ to = [(from, to)]
hanoi x from buffer to = 

