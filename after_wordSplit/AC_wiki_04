/ * 洗牌 函数 * /
void   shuffle ( void   * x ,   int   size _ elem ,   int   total _ elem )   {
int   main ( int   argc ,   char   * argv [ ] )   {
from   random   import   shuffle
from   itertools   import   izip ,   tee
def   in _ order ( my _ list ) :
