int   llist _ node _ prepend ( LLIST _ T   * ptr ,   const   void   * datap ) ;
int   llist _ travel ( LLIST _ T   * ptr ,   node _ proc _ fun _ t   * proc ) ;
void   llist _ node _ delete ( LLIST _ T   * ptr ,   node _ comp _ fun _ t   * comp ,   const   void   * key ) ;
void   * llist _ node _ find ( LLIST _ T   * ptr ,   node _ comp _ fun _ t   * comp ,   const   void   * key ) ;
